/* pages/order/index.wxss */

.order {
  width: 100%;
  height: 100%;
  overflow-y: auto;
  display: none;
}

.list:last-child .list-bottom {
  margin-bottom: 0;
}

.list .list-head {
  margin-bottom: 2rpx;
  padding: 15rpx 30rpx;
  height: 100rpx;
  overflow: hidden;
}

.list-head .head-left {
  height: 70rpx;
}     

.list-head .head-left .left-store {
  height: 40rpx;
}

.list-head .head-left .left-date {
  height: 30rpx;
}

.list .list-middle {
  padding: 0 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 2rpx;
}
.middle-length{
  width: 70%;        
}
.list .list-bottom {
  padding: 20rpx 30rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.list-bottom-none {
  height: 0;
  margin-bottom: 20rpx;
}

.list .list-bottom .bottom-btn {
  width: 180rpx;
  height: 60rpx;
  border: 1rpx solid #282828;
  border-radius: 10rpx;
  line-height: 60rpx;
  padding: 0;
  vertical-align: middle;
  margin-left: 50rpx;
}

.list .list-bottom .bottom-red {
  border-color: #f00;
}
.list .list-bottom .bottom-long{
  width: 360rpx;
}
.order-ago {
  margin: 35rpx auto 0;
  width: 270rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
}

.order-empty {
  margin: 300rpx auto 0;
}

.order-bottom {
  height: 40rpx;
  line-height: 40rpx;
}

.empty-img {
  height: 140rpx;
  width: 120rpx;
  margin: 0 auto;
}

.empty-img image {
  height: 140rpx;
  width: 120rpx;
  display: block;
}

.empty-top {
  margin: 50rpx auto 10rpx;
}
.empty-bottom{
  width: 200rpx;
  height: 50rpx;
  color: white;
  background: #0096ff;
  line-height: 50rpx;
  margin: 30rpx auto; 
  border-radius: 10rpx;

}
.right-return {
  margin-top: 8rpx;
}

/*底部弹出框*/
.fixed-body {
  bottom: 0;
  position: absolute;
  width: 94%;
  margin: 0 0 10rpx 3%;
}

.fixed-top {
  height: 180rpx;
  line-height: 90rpx;
  border-radius: 40rpx;
}

.fixed-top .top-bod {
  border-bottom: 1px solid #ccc;
}

.fixed-bottom {
  border-radius: 40rpx;
  margin-top: 10rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.phone-number{
  height: 90rpx;
}
