
@import "../../app.wxss";
.bind-info{
    line-height: 80rpx;
    background-color: #ffa600;
    color: #ff0000;
    padding-left: 20rpx;
}
.bind-phone,.bind-code{
    width: 750rpx;
    background-color: #fff; 
    line-height: 100rpx;
    /*padding-left: 20rpx;*/
}
.bind-code{
   border-top: 1px solid #ccc;
}
.bind input{
    height: 100rpx;
    width: 230rpx;
}
.bind .phone-int{
    width: 500rpx;
}
.phone-text,.code-text{
    width: 160rpx;
    text-align: right;
}
.code-click{
    width: 250rpx;
    margin: 20rpx;
    line-height: 60rpx;
    background-color: #ccc;
    border-radius: 3px;
}
.bind-error{
    padding: 10rpx;
    height: 60rpx;
    line-height: 60rpx;
}
.error-text{
    line-height: 50rpx;
}
.error-icon{
    width: 35rpx;
    height: 35rpx;
    margin:6rpx  10rpx 0 0;
}
.bind-button{
    width: 700rpx;
    margin:20rpx auto;
    line-height: 100rpx;
    color: #fff;
    border-radius: 4px;
}
.delete-icon{
    margin: 32rpx 0;
}

.bind-gray{
    background: #b2b2b2;
}
